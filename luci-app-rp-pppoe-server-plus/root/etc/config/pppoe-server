
config server
	option enabled '1'
	option interface 'lan'
	option ac_name 'access-concentrator-name'
	list service_name 'service-name1'
	list service_name 'service-name2'
	option maxsessionsperpeer '1'
	option localip '10.0.0.1'
	option firstremoteip '10.67.15.1'
	option maxsessions '2046'
	option optionsfile '/etc/ppp/pppoe-server-options'
	option randomsessions '1'
	option unit '1'
	option offset '0'
	option timeout '60'
	option mss '1468'
	option sync '0'

config pppd
	option pap 'refuse-pap'
	option chap 'require-chap'
	option mschapv2 'require-mschap-v2'
	option authmode 'auth'
	option ipv6 '-ipv6'
	option lcp_echo_interval '10'
	option lcp_echo_failure '2'
	option mru '1492'
	option mtu '1492'
	option msdns1 '8.8.8.8'
	option msdns2 '1.1.1.1'
	option logfile '/dev/null'

config firewall
	option ENNAT '0'
	option ENISO '0'
	option conntrackmax '16384'
